pipeline {
	agent { label 'jdk8' }

	options { 
    	buildDiscarder(logRotator(numToKeepStr: '5')) 
  	}

	stages {
		stage('Build') {
			steps {
			    container('maven9') {
				sh 'mvn clean package'
			    }
			}
		}
		stage('Test') {
			steps {
				echo 'Test our code'
			}
		}
		stage('Archive') {
			steps {
				echo 'Archive our artifacts'
			}
		}
		stage('Deploy') {
			steps {
				echo 'Deploy our application'
			}
		}
	}
}
